{
  "extends": "@repo/typescript-config/base.json",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
